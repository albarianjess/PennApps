<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="babyllama.pennapps.ShelterActivity"
    android:background="@drawable/grad"
    android:autoLink="web|email|phone"
    android:linksClickable="true">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"

            android:id="@+id/header">

            <ImageView
                android:layout_width="337dp"
                android:layout_height="243dp"
                android:id="@+id/imageView2"
                android:src="@drawable/pup"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Boulder Humane Society"
                android:textColor="@color/colorWhite"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="2323 55th Street"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorWhite"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Boulder, CO 80301"
                android:textColor="@color/colorWhite"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="720-555-7466"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorWhite"
                android:id="@+id/textView6" />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout2"
            android:layout_gravity="bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dogs"
                android:onClick="goToDogs"
                android:id="@+id/button3"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"
                android:layout_above="@+id/button2"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cats"
                android:onClick="goToCats"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"
                android:id="@+id/button2"
                android:layout_above="@+id/button"
                android:layout_alignLeft="@+id/button3"
                android:layout_alignStart="@+id/button3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Animals"
                android:padding="10sp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"
                android:onClick="goToSmall"
                android:id="@+id/button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>




</RelativeLayout>
